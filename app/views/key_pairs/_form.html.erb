<%= form_for @key_pair, :html => {:class => "form-horizontal container"} do |f| %>
<% if @key_pair.errors.any? %>
<div id="error_expl" class="panel panel-danger">
  <div class="panel-body">
    <ul>
      <% @key_pair.errors.full_messages.each do |msg| %>
      <li style="color: red"><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name %>
  <div class="input-field col s6">
    <%= f.text_field :name, :class => 'materialize-textarea validate'%>
  </div>

  <%= f.label :public_key %>
  <div class="input-field col s6">
    <%= f.text_area :public_key, :class => 'materialize-textarea form-control' , placeholder: 'If left empty will be autogenerated.' %>
  </div>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  key_pairs_path, :class => 'btn btn-default' %>
</div>

<% end %>
